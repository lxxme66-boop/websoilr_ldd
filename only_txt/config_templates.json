{
  "config_templates": {
    "balanced_config": {
      "name": "均衡配置",
      "description": "各种问题类型均衡分布，适合通用场景",
      "question_type_ratios": {
        "factual": 0.25,
        "comparison": 0.20,
        "reasoning": 0.25,
        "multi_hop": 0.15,
        "open_ended": 0.15
      }
    },
    
    "open_ended_focused": {
      "name": "开放型重点配置",
      "description": "重点生成开放型问题，适合创新思维训练",
      "question_type_ratios": {
        "factual": 0.15,
        "comparison": 0.15,
        "reasoning": 0.20,
        "multi_hop": 0.10,
        "open_ended": 0.40
      }
    },
    
    "traditional_qa": {
      "name": "传统问答配置",
      "description": "专注于事实和推理问题，适合基础知识测试",
      "question_type_ratios": {
        "factual": 0.40,
        "comparison": 0.30,
        "reasoning": 0.30,
        "multi_hop": 0.00,
        "open_ended": 0.00
      }
    },
    
    "complex_reasoning": {
      "name": "复杂推理配置",
      "description": "重点生成推理和多跳问题，适合高级分析能力训练",
      "question_type_ratios": {
        "factual": 0.10,
        "comparison": 0.15,
        "reasoning": 0.35,
        "multi_hop": 0.25,
        "open_ended": 0.15
      }
    },
    
    "text_analysis_focused": {
      "name": "文本分析专用配置",
      "description": "专门针对纯文本分析优化的配置",
      "question_type_ratios": {
        "factual": 0.30,
        "comparison": 0.20,
        "reasoning": 0.30,
        "multi_hop": 0.10,
        "open_ended": 0.10
      }
    }
  },
  
  "default_config": {
    "models": {
      "qa_generator_model": {
        "path": "/mnt/storage/models/Qwen/Qwen2.5-14B-Instruct",
        "max_length": 4096,
        "temperature": 0.8
      }
    },
    
    "question_generation": {
      "question_types": ["factual", "comparison", "reasoning", "multi_hop", "open_ended"],
      
      "question_type_ratios": {
        "factual": 0.25,
        "comparison": 0.18,
        "reasoning": 0.25,
        "multi_hop": 0.15,
        "open_ended": 0.17
      },
      
      "question_type_priorities": {
        "open_ended": 1,
        "reasoning": 2,
        "factual": 3,
        "comparison": 4,
        "multi_hop": 5
      },
      
      "complexity_levels": {
        "simple": 0.2,
        "medium": 0.5,
        "complex": 0.3
      },
      
      "language_patterns": {
        "zh_cn": 0.8,
        "en": 0.2
      }
    },
    
    "text_processing": {
      "max_section_length": 1000,
      "min_text_length": 50,
      "quality_threshold": 0.7,
      "enable_text_cleaning": true,
      "preserve_formatting": false
    },
    
    "batch_processing": {
      "max_workers": 4,
      "max_concurrency_per_worker": 256,
      "batch_size": 10,
      "timeout_seconds": 300
    },
    
    "output_formats": {
      "sharegpt": {
        "enabled": true,
        "include_reasoning": true,
        "include_metadata": true
      },
      "instruction": {
        "enabled": false,
        "include_context": true
      },
      "alpaca": {
        "enabled": false,
        "simple_format": true
      }
    },
    
    "quality_control": {
      "enable_validation": true,
      "min_question_length": 60,
      "max_question_length": 120,
      "relevance_threshold": 0.3,
      "enable_deduplication": true,
      "similarity_threshold": 0.85
    },
    
    "tcl_specific": {
      "domain": "semiconductor_display",
      "enable_domain_terms": true,
      "technical_focus": true,
      "industry_context": "TCL显示技术"
    }
  },
  
  "api_configurations": {
    "doubao": {
      "base_url": "https://ark.cn-beijing.volces.com/api/v3",
      "model": "doubao-1.5-thinking-pro-m-250428",
      "temperature": 0.7,
      "max_tokens": 4096,
      "top_p": 0.9
    },
    
    "qwen": {
      "base_url": "https://dashscope.aliyuncs.com/compatible-mode/v1",
      "model": "qwen-max",
      "temperature": 0.8,
      "max_tokens": 2048,
      "top_p": 0.9
    },
    
    "local_model": {
      "base_url": "http://0.0.0.0:8080/v1",
      "model": "/mnt/storage/models/Skywork/Skywork-R1V3-38B",
      "temperature": 0.8,
      "max_tokens": 2048,
      "top_p": 0.9
    }
  },
  
  "data_paths": {
    "input_data": "data/text_input",
    "output_data": "data/output",
    "cleaned_data": "data/cleaned",
    "final_dataset": "data/final_dataset",
    "logs": "logs",
    "temp": "temp"
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_handler": {
      "enabled": true,
      "filename": "logs/only_txt.log",
      "max_bytes": 10485760,
      "backup_count": 5
    },
    "console_handler": {
      "enabled": true,
      "level": "INFO"
    }
  }
}